<div class="bg-light w-50 mx-auto m-2 p-2" style="border-color:rgb(148, 108, 80); border-width: 3px; border-style:solid;">
    <div class="m-2 p-2 mx-auto">
        <h1 style="text-align:center">
            <strong><%= pokemon['name'] %> </strong>
        </h1>
    </div>
    <div class="w-50 mx-auto">
        <img class="image w-100"  src="<%= pokemon.imgURL%>"></img>
    </div>
    <div class="row m-5" style="border-color:rgb(52, 133, 101); border: 2px; border-style:solid;">
        <div class="col m-2 p-2"> 
            <strong>Pokedex #: </strong><%= pokemon.id %> <br>
            <strong>Type(s): </strong><%= pokemon['type1'] %>              
            <% if (pokemon['type2'] != "None") { %>
                & <%= pokemon['type2'] %>
            <% } %>
        </div>
        <div class="col m-2 p-2">
            <strong>HP: </strong><%= pokemon.hp %> <br>
            <strong>Speed: </strong><%= pokemon.speed %> <br>
        </div>
        <div class="col m-2 p-2">
            <strong>Attack: </strong><%= pokemon.attack %> <br>
            <strong>Defense: </strong><%= pokemon.defense %> <br>
        </div>
        <div class="col m-2 p-2">
            <strong>Sp. Attack: </strong><%= pokemon.spAttack %> <br>
            <strong>Sp. Defense: </strong><%= pokemon.spDefense %> <br>
        </div>
    </div>
    <div class="p-3">
        <strong>Moves: </strong><br>
        <ol>
            <% for ( move in pokemon.moves) { %> 
                <span class="p-3">  
                    <li>
                        <u><%=move%></u> -<br>
                        <div>
                            <ul>
                                <%for ( data in pokemon.moves[move]) { %>
                                    <li>
                                        <strong><%=data%>: </strong>
                                        <em><%=pokemon.moves[move][data]%><br></em>
                                    </li>
                                    <% } %> 

                            </ul>

                        </div>
                    </li>
    
                </span>
            <% } %> 
        </ol>
        

    </div>
    <div>
        <strong>Mark As:</strong>
        <form method="post" action="/pokemon/addData/<%= pokemon.name %>">
            <input type="checkbox" id="<%= pokemon.name %>Seen" name="seen" value="seen">
            <label for="<%= pokemon.name %>Seen">Seen</label>
            <input type="checkbox" id="<%= pokemon.name %>Caught" name="caught" value="caught">
            <label for="<%= pokemon.name %>Caught">Caught</label>
            <input type="checkbox" id="<%= pokemon.name %>Favorite" name="favorite" value="favorite">
            <label for="<%= pokemon.name %>Favorite">Favorite</label>
            <input type="submit" value="Set" class="m-2">
        </form>
    </div>

</div>

