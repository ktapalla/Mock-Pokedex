        <div class="row">
            <!-- Column[0] marked as 'seen' list -->
            <div class="col p-2 p-t5">
                <% if (seenPokemon.length > 0) { %>    
                <ul >
                    <% for (pokemon of seenPokemon){ %>
                        <li class="m-1 p-1">
